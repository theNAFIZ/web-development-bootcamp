<%- include("partials/header.ejs"); -%>
<h1>Home</h1>
<p><%= startingContent %></p>
<% posts.forEach( (post) => { %>
    <h2><%= post.title %></h2>
    <% const added = post.body.length > 100 ? " ..." : "" %>
    <p><%= post.body.slice(0, 100) + added %>
        <a href="<%= post.link %>">Read More</a>
    </p>
<% }); %>
<%- include("partials/footer.ejs"); -%>
